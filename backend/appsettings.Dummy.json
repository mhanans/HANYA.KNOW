{
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Username=postgres;Password=yourpassword;Database=yourdb"
  },
  "Embedding": {
    "BaseUrl": "http://localhost:11434",
    "Model": "your-embed-model",
    "Provider": "your-provider"
  },
  "KnowledgeBase": {
    "StoragePath": "knowledge-base",
    "ChunkMaxTokens": 900,
    "ChunkOverlapTokens": 120
  },
  "Llm": {
    "Provider": "your-llm-provider",
    "ApiKey": "your-api-key",
    "Model": "your-llm-model",
    "OllamaHost": "http://localhost:11434",
    "MaxRetries": 3
  },
  "Chat": {
    "CooldownSeconds": 3,
    "ScoreThreshold": 0.7,
    "PromptTemplate": "You are a helpful assistant. Answer the user's question based ONLY on the provided context below. Do not use any external knowledge. If the context does not contain the information to answer, you must state 'Berdasarkan informasi yang tersedia, saya tidak dapat menemukan jawaban untuk pertanyaan tersebut.'. Cite sources using [number] notation. Answer in Indonesian.\\n\\n--- CONTEXT START ---\\n{context}\\n--- CONTEXT END ---\\n\\nQuestion: {query}"
  },
  "AccelistSso": {
    "Host": "https://sso.example.com",
    "AppId": "your-app-id",
    "RedirectUri": "https://your-app.example.com/auth/sso/callback",
    "Scope": "email profile openid"
  },
  "SourceCode": {
    "DefaultTopK": 6,
    "SimilarityThreshold": 0.35,
    "PromptTemplate": "",
    "SourceDirectory": "source-code",
    "IncludeExtensions": [".cs", ".tsx", ".ts", ".js", ".jsx"],
    "ExcludeDirectories": [".git", "node_modules", "dist", "build", "bin", "obj"],
    "ChunkSize": 200,
    "ChunkOverlap": 40
  },
  "Recommendation": {
    "CvCategoryId": 0
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000"]
  },
  "ApiKey": "dummy-api-key",
  "Jwt": {
    "Key": "your-secret-key"
  }
}
